<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="optID">
        <field-validator type="requiredstring">
            <message key="optID.required"/>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message key="password.required"/>
        </field-validator>
        <field-validator type="fieldexpression">
           <param name="expression"><![CDATA[(password==repPassword)]]></param>
           <message key="passCompare"></message>
        </field-validator>        
    </field>
    <field name="isAdmin">
        <field-validator type="required">
            <message key="isAdmin.required"/>
        </field-validator>
    </field>
    <field name="sex">
        <field-validator type="required">
            <message key="sex.required"/>
        </field-validator>
    </field>

    <field name="userName">
        <field-validator type="requiredstring">
            <message key="userName.required"/>
        </field-validator>
    </field>
    <field name="teacher">
        <field-validator type="requiredstring">
            <message key="teacher.required"/>
        </field-validator>
    </field>
    <field name="grade">
        <field-validator type="requiredstring">
            <message key="grade.required"/>
        </field-validator>
    </field>

</validators>